<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/setting_selector" >

    <ImageView
        android:id="@+id/view_settings_image"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:visibility="gone"
        android:contentDescription="@string/imagedesc_icon"
        android:layout_marginLeft="5dip"
        android:src="@color/border" />

    <TextView
        android:id="@+id/view_settings_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_settings_image"
        android:text="N/A"
        android:layout_marginLeft="5dip"
        android:visibility="gone"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/view_settings_categ_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="N/A"
        android:textColor="@color/categ"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/view_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:text="N/A"
        android:layout_marginLeft="15dip"
        android:textSize="18dip" />

    <Switch
        android:id="@+id/view_settings_switch"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@color/border"/>
    
</RelativeLayout>